# Application Configuration
APP_NAME="Meeting Intelligence System"
APP_VERSION="2.0.0"
ENVIRONMENT="development"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_PROTOCOL="http"

# LLM & Embedding Configuration
# Use 'openai' or 'bedrock'
LLM_PROVIDER="openai"
EMBED_PROVIDER="openai"

# OpenAI Credentials (required if provider is 'openai')
OPENAI_API_KEY="your-openai-key"

# AWS / Bedrock Credentials (required if provider is 'bedrock')
AWS_ACCESS_KEY_ID="test"
AWS_SECRET_ACCESS_KEY="test"
BEDROCK_REGION="eu-west-2"
BEDROCK_LLM_MODEL_ID="anthropic.claude-3-haiku-20240307-v1:0"
BEDROCK_EMBED_MODEL_ID="amazon.titan-embed-text-v2:0"

# --- V2 settings ---

# AWS endpoint override (LocalStack for local dev, empty for real AWS)
AWS_ENDPOINT_URL="http://localhost:4566"
AWS_REGION="eu-west-2"

# S3 artifact storage
S3_RAW_BUCKET="local-raw"
S3_RAW_PREFIX="raw"
S3_DERIVED_BUCKET="local-derived"
S3_DERIVED_PREFIX="derived"

# DynamoDB meeting metadata
DYNAMODB_TABLE_NAME="MeetingsMetadata"

# S3 Vectors (empty = use in-memory vector store for local dev)
S3_VECTORS_BUCKET=""
S3_VECTORS_INDEX_NAME=""

# ECS worker (empty = skip ECS RunTask, worker runs via docker-compose)
ECS_CLUSTER_NAME=""
ECS_WORKER_TASK_DEF=""
ECS_WORKER_SUBNETS=""
ECS_WORKER_SECURITY_GROUP=""
ECS_WORKER_CONTAINER_NAME="worker"

# Evaluation
ENABLE_EVAL=false
EVAL_LAST_N=10
EVAL_S3_PREFIX="derived/evaluations"
